<h1>Spamagram</h1>

<% if @posts.any? %>

  <%= @posts.each do |post| %>
    <%= link_to (image_tag post.image.url(:medium), class: 'img-response'), post_path(post) %> <!-- image_tag is a rails helper to display images, replaces post.image -->
    <%= post.caption %>
  <% end %>


<% else %>

  <p>No posts yet</p>

<% end %>

  <%= link_to 'Add Post', new_post_path %>
