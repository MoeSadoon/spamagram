<%= render 'post', post: @post %>
<% if current_user && current_user.id == @post.user_id %>
  <div class="text-center edit-links">
    <%= link_to "Go back", posts_path %>
    |
    <%= link_to "Edit Post", edit_post_path(@post) %>
  </div>
<% else %>
  <div class="text-center edit-links">
    <%= link_to "Go back", posts_path %>
  </div>
<% end %>
